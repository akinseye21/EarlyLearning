<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/math_bg"
    tools:context=".Maths.NumberLand.NumberLandPage1">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/math"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/fredoka_one_regular"
        android:paddingTop="20dp"
        android:text="MATH"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/numberland"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/math"
        android:background="#d10E2B5F"
        android:fontFamily="@font/fredoka_one_regular"
        android:gravity="center"
        android:padding="5dp"
        android:text="NUMBERLAND"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottombar"
        android:layout_below="@+id/numberland"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/image"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/number_land" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discover number 1 to 9, each in its very own enchanting setting. The 9 scenes present a number with objects that the child counts by tapping on the screen. A friendly voice counts along too. Look for the special hidden surprise in each."
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="1dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/math"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/asset_math" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="10dp"
                    android:background="#6d3f9a"
                    android:fontFamily="@font/fredoka_one_regular"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Math"
                    android:textColor="@color/white"
                    android:textSize="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/literacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/asset_literacy" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="10dp"
                    android:background="#6d3f9a"
                    android:fontFamily="@font/fredoka_one_regular"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Literacy"
                    android:textColor="@color/white"
                    android:textSize="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/shapes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/asset_shapes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="10dp"
                    android:background="#6d3f9a"
                    android:fontFamily="@font/fredoka_one_regular"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Shapes"
                    android:textColor="@color/white"
                    android:textSize="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/drawing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/asset_drawing" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="10dp"
                    android:background="#6d3f9a"
                    android:fontFamily="@font/fredoka_one_regular"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Drawing"
                    android:textColor="@color/white"
                    android:textSize="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/coding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/asset_coding" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="10dp"
                    android:background="#6d3f9a"
                    android:fontFamily="@font/fredoka_one_regular"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Coding"
                    android:textColor="@color/white"
                    android:textSize="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rhymes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/asset_rhymes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="10dp"
                    android:background="#6d3f9a"
                    android:fontFamily="@font/fredoka_one_regular"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Rhymes"
                    android:textColor="@color/white"
                    android:textSize="8dp" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>