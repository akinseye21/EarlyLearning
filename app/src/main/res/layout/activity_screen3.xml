<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/asset_27"
    android:id="@+id/bg"
    android:padding="20dp"
    tools:context=".Screen3">

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/craft"
                android:layout_alignParentRight="true"
                android:text="Menu"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hamburger"
                android:paddingLeft="5dp"
                app:tint="@color/white" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/craft"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/fredoka_one_regular"
                android:text="tynkTANK"
                android:textColor="#ffffff"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/craft"
                android:layout_alignParentRight="true"
                android:paddingLeft="10dp"
                android:text="Classes"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="normal" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose what to learn today?"
            android:textColor="@color/white"
            android:paddingTop="10dp"
            android:fontFamily="@font/fredoka_one_regular"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:scrollbarSize="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@drawable/asset_math"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Math"
                                android:textColor="@color/white"
                                android:fontFamily="@font/fredoka_one_regular"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="115dp"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@drawable/asset_literacy"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Literacy"
                                android:textColor="@color/white"
                                android:fontFamily="@font/fredoka_one_regular"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="115dp"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@drawable/asset_shapes"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Shapes"
                                android:textColor="@color/white"
                                android:fontFamily="@font/fredoka_one_regular"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="115dp"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@drawable/asset_drawing" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Drawing"
                                android:textColor="@color/white"
                                android:fontFamily="@font/fredoka_one_regular"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="115dp"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@drawable/asset_coding"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Coding"
                                android:textColor="@color/white"
                                android:fontFamily="@font/fredoka_one_regular"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="115dp"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@drawable/asset_rhymes"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rhymes"
                                android:textColor="@color/white"
                                android:fontFamily="@font/fredoka_one_regular"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="115dp"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

            </ScrollView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/asset_6"
                android:id="@+id/imageo"/>
        </LinearLayout>




    </LinearLayout>


</RelativeLayout>