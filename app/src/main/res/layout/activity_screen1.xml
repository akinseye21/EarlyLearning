<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp"
    tools:context=".Screen1">

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/craft"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/fredoka_one_regular"
                android:text="tynkTANK"
                android:textColor="#000000"
                android:textSize="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/craft"
                android:layout_alignParentRight="true"
                android:paddingLeft="10dp"
                android:text="Tutors"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/craft"
                android:layout_alignParentRight="true"
                android:text="Menu"
                android:textColor="#000000"
                android:textSize="30dp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hamburger"
                android:layout_alignParentRight="true"
                android:paddingLeft="5dp"/>
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:layout_below="@+id/rel1">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:id="@+id/cardChisom"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true">

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/chisom_card">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fredoka_one_regular"
                        android:text="Chisom"
                        android:textColor="#fadcde"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="READ MORE >"
                        android:textColor="#ffffff"
                        android:textSize="10dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="60dp"
                android:src="@drawable/asset_chisom" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:id="@+id/cardZainab"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/zainab_card">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fredoka_one_regular"
                        android:text="Zainab"
                        android:textColor="#99daf7"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="READ MORE >"
                        android:textColor="#ffffff"
                        android:textSize="10dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="60dp"
                android:src="@drawable/asset_zainab" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:id="@+id/cardAyo"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/ayo_card">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fredoka_one_regular"
                        android:text="Ayo"
                        android:textColor="#a1f0a9"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="READ MORE >"
                        android:textColor="#ffffff"
                        android:textSize="10dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="60dp"
                android:src="@drawable/asset_ayo" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>